<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="SignInEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:autoText">false</item>
        <item name="android:capitalize">none</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/table_text</item>

        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="ShadowText">
        <item name="android:shadowColor">@color/text_shadow</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="AvatarLarge">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <style name="AvatarMedium">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="AvatarSmall">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="ListView">
        <item name="android:dividerHeight">2px</item>
        <item name="android:divider">@drawable/bootstrap_divider</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="ListSubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/table_text_light</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Custom Spinner -->
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="ListSpinner" parent="Spinner">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/list_item_background</item>
    </style>

    <style name="BootstrapButton">
        <item name="android:background">@drawable/button_background_states</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TimerChronometer">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">75sp</item>
        <item name="android:textColor">#464646</item>
    </style>

    <style name="NavMenuButton">
        <item name="android:textColor">@color/nav_text_selector</item>
        <item name="android:background">@drawable/nav_menu_button_background_selector</item>
    </style>

    <!--ADDED-->
    <!-- List item text -->
    <style name="ListItemTitle">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/body_text_1</item>

    </style>

    <style name="ListItemTitle.ComplexContent" parent="ListItemTitle">
        <item name="android:paddingLeft">?listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?listPreferredItemPaddingRight</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>

    </style>

    <style name="ListItemTitle.ComplexContent.Inset" parent="ListItemTitle.ComplexContent">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="ListItemSubtitle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/body_text_2</item>

    </style>

    <style name="ListItemSubtitleBold" parent="ListItemSubtitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/body_text_2</item>
    </style>

    <style name="ListItemTitle.Inverse">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/body_text_1_inverse</item>

    </style>

    <style name="ListItemSubtitle.Inverse">
        <item name="android:textColor">@color/body_text_2_inverse</item>

    </style>

    <!-- Body content -->
    <style name="TextHeader">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/body_text_1</item>
        <!--<item name="android:maxLines">?textHeaderMaxLines</item>-->
        <item name="android:ellipsize">end</item>

    </style>

    <style name="TextHeaderSub">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/body_text_2</item>

    </style>

    <!-- Session feedback -->
    <style name="SearchHeader">
        <!--<item name="android:background">@drawable/feedback_question_background</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingTop">@dimen/element_spacing_normal</item>
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <!--<item name="android:textStyle">italic</item>-->
    </style>

    <style name="Search">
        <!--<item name="android:background">@drawable/feedback_question_background</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:paddingTop">@dimen/element_spacing_normal</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <!--<item name="android:textStyle">italic</item>-->
    </style>

    <style name="SearchGuideText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <!--<item name="android:textColor">@color/accent_1</item>-->
    </style>

    <style name="SearchGuideText.Right">
        <item name="android:gravity">right</item>
    </style>

    <style name="FeedbackRatingBarLabel">
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textColor">@color/rating_bar_label</item>-->
        <item name="android:textSize">16dp</item> <!-- not SP -->
        <item name="android:gravity">center</item>
    </style>

    <!--ADDED-->
    <style name="big_ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_big_holo_light</item>
    </style>
    <style name="small_ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_small_holo_light</item>
    </style>


</resources>
